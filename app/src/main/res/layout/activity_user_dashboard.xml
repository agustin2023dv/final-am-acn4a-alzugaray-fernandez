<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashboard">

<LinearLayout
    android:id="@+id/layoutHeader"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color_principal"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".UserDashboard">

    <ImageView
        android:id="@+id/iconoAtras"
        android:layout_width="25dp"
        android:layout_height="33dp"
        android:src="@drawable/volver_atras"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="1"/>

</LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfoUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/foto_perfil" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/txtNombreUser"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/nombre_usuario" />

        <TextView
            android:id="@+id/txtNombreStorage"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtApellidoUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apellido_usuario" />

        <TextView
            android:id="@+id/txtApellidoStorage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/btnCargarImagen"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/color_principal"
            android:text="@string/boton_cargar_imagen"></Button>

        <TextView
            android:id="@+id/txtDetallesUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_principal"
            android:text="Log out"></Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
